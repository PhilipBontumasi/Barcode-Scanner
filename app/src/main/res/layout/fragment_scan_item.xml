<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanItemFragment" >

    <EditText
        android:id="@+id/editTextBarcodeSI"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Barcode Number"
        android:inputType="number|textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBarcodeSI"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="67dp"
        android:src="@drawable/barcode"
        app:layout_constraintStart_toEndOf="@+id/editTextBarcodeSI"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#000000" />

    <Button
        android:id="@+id/btnSubmitSI"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="34dp"
        android:text="Submit"
        app:layout_constraintStart_toEndOf="@+id/btnBackSI"
        app:layout_constraintTop_toBottomOf="@+id/imageBarcodeSI" />

    <Button
        android:id="@+id/btnBackSI"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="35dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBarcodeSI" />
</androidx.constraintlayout.widget.ConstraintLayout>